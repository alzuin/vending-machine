<h1>Coins situation</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <td>ID</td>
    <td>Size</td>
    <td>Q.ty</td>
    <td>Actions</td>
  </tr>
  </thead>
  <tbody>
  <% @coins.each do |coin| %>
    <tr>
      <td>
        <%=coin.id%>
      </td>
      <td>
        <%=coin.value_in_pound%>
      </td>
      <td>
        <%=coin.quantity%>
      </td>
      <td>
        <%=link_to 'Add coins', edit_coin_path(coin) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Home', root_path %>
