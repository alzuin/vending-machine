<h1>Products situation</h1>

<table class="table table-hover">
  <thead>
  <tr>
    <td>ID</td>
    <td>Name</td>
    <td>Price</td>
    <td>Q.ty</td>
    <td>Actions</td>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td>
        <%=product.id%>
      </td>
      <td>
        <%=product.name%>
      </td>
      <td>
        <%=product.value_in_pound%>
      </td>
      <td>
        <%=product.quantity%>
      </td>
      <td>
        <%=link_to 'Recharge', edit_product_path(product) %>
        <%=link_to 'Destroy',  product_path(product), method: :delete %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Add product', new_product_path %> |
